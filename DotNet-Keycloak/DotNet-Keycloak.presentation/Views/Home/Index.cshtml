@model List<UserClaimsModel>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.6/css/dataTables.bootstrap5.min.css">
    <style>
        .table-container {
            margin: 20px;
        }

        .access-token-container {
            max-height: 600px;
            max-width: 100px; 
            overflow-y: auto;
            word-break: break-all;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>
        <div class="table-container">
            <table id="userInfoTable" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Type</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                    <p>Access Token: @ViewBag.AccessToken</p>

                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#userInfoTable').DataTable({
                responsive: true,
                paging: true,
                ordering: true,
                searching: true,
                lengthChange: true,
                pageLength: 20
            });
        });
    </script>
</body>
</html>
